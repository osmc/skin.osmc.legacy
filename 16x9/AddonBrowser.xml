<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- addonbrowser -->
	<backgroundcolor>0</backgroundcolor>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50,51,52,53</views>
	<controls>
		<!-- Fake label2 -->
		<control type="label" id="9999">
			<font>-</font>
			<label>$VAR[Label2]</label>
		</control>
		<!-- Fake wideinfo -->
		<control type="label" id="9998">
			<font>-</font>
			<label>$VAR[WideInfo]</label>
		</control>
		<!-- Background -->
		<include>WindowBackground</include>
		<!-- Fanart -->
		<include>Fanart</include>
		<!-- Heading -->
		<include>Heading</include>
		<!-- Time -->
		<include>Time</include>
		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>
			<!-- Views -->
			<include>Viewtype50</include>
			<include>Viewtype51</include>
			<include>Viewtype52</include>
			<include>Viewtype53</include>
		</control>
		<!-- Background -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="44000000">dialogs/DialogTextBackground.png</texture>
			<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
			<visible>ControlGroup(3000).HasFocus | Control.HasFocus(3001)</visible>
		</control>
		<control type="group">
			<left>50</left>
			<top>140</top>
			<width>560</width>
			<height>780</height>
			<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus | Control.HasFocus(3001)</visible>
			<animation type="Visible">
				<effect type="slide" start="-550,0" end="0,0" center="auto" tween="sine" easing="out" time="200" />
				<effect type="fade" start="0" end="100" time="200" />
			</animation>
			<animation type="Hidden">
				<effect type="fade" start="100" end="0" time="100" />
			</animation>
			<!-- Background -->
			<control type="image">
				<width>560</width>
				<height>780</height>
				<texture>dialogs/DialogBackground.png</texture>
			</control>
			<!-- Heading -->
			<control type="label">
				<left>20</left>
				<top>20</top>
				<width>520</width>
				<height>50</height>
				<font>Large</font>
				<label>33063</label>
				<textcolor>ColorHeading</textcolor>
			</control>
			<!-- Options -->
			<control type="grouplist" id="3000">
				<left>40</left>
				<top>80</top>
				<width>480</width>
				<height>680</height>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onleft>50</onleft>
				<onright>50</onright>
				<itemgap>0</itemgap>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus | Control.HasFocus(3001)</visible>
				<defaultcontrol always="true">2</defaultcontrol>
				<!-- View -->
				<control type="button" id="2">
					<include>OptionButtons</include>
					<label>-</label>
				</control>
				<!-- Sort by -->
				<control type="button" id="3">
					<include>OptionButtons</include>
					<label>103</label>
					<visible>Control.IsEnabled(3)</visible>
				</control>
				<!-- Sort ascending/descending -->
				<control type="togglebutton" id="4">
					<include>OptionButtons</include>
					<label>584</label>
					<altlabel>585</altlabel>
					<usealttexture>Container.SortDirection(Descending)</usealttexture>
					<visible>Control.IsEnabled(4)</visible>
				</control>
				<!-- Fanart -->
				<control type="radiobutton" id="98">
					<include>OptionButtons</include>
					<label>20445</label>
					<onclick>Skin.ToggleSetting(AddonFanart)</onclick>
					<selected>Skin.HasSetting(AddonFanart)</selected>
				</control>
				<!-- Filter -->
				<control type="edit" id="19">
					<include>OptionButtons</include>
					<label>587</label>
					<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
				</control>
				<!-- Filter -->
				<control type="radiobutton" id="93">
					<include>OptionButtons</include>
					<label>587</label>
					<onclick>Right</onclick>
					<onclick>Right</onclick>
					<onclick>Filter</onclick>
					<selected>Container.Filtered</selected>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<!-- Auto update -->
				<control type="button" id="5">
					<include>OptionButtons</include>
					<label>24063</label>
					<visible>Control.IsEnabled(5)</visible>
				</control>
				<!-- Notifications -->
				<control type="radiobutton" id="6">
					<include>OptionButtons</include>
					<label>25000</label>
					<visible>Control.IsEnabled(6)</visible>
				</control>
				<!-- Check for updates -->
				<control type="button" id="9">
					<include>ButtonCommonValues</include>
					<label>24034</label>
				</control>
				<!-- Language -->
				<control type="radiobutton" id="7">
					<include>OptionButtons</include>
					<label>25001</label>
					<visible>Control.IsEnabled(7)</visible>
				</control>
			</control>
		</control>
		<control type="button" id="3001">
			<top>140</top>
			<width>90</width>
			<height>780</height>
			<label>-</label>
			<font>-</font>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<visible>true</visible>
		</control>
	</controls>
</window>